{
	"name": "BolFilter",
	"version": "1.0.0",
	"description": "Filter onderverkopers uit de resultaten van Bol.com",
	"author": "JKCTech",
	"manifest_version": 3,
	"permissions": [
		"declarativeNetRequest",
		"storage"
	],
	"background": {
		"service_worker": "background.js"
	},
	"host_permissions": [
		"*://*.bol.com/*",
		"*://bol.com/*"
	],
	"action": {
		"default_icon": "icon/icon.png",
		"default_title": "BolFilter",
		"default_popup": "menu.html"
	},
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	}
}